{
  "name": "eth-dev-faucet",
  "displayName": "ETH Dev Faucet",
  "description": "Ethereum faucet for local development nodes (geth, hardhat, anvil)",
  "version": "0.1.2",
  "publisher": "smolgroot",
  "repository": {
    "type": "git",
    "url": "https://github.com/smolgroot/eth-dev-faucet-vscode"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ethereum",
    "blockchain",
    "faucet",
    "geth",
    "hardhat",
    "web3",
    "development"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ethFaucet.sendEth",
        "title": "Send ETH",
        "icon": "$(send)"
      },
      {
        "command": "ethFaucet.refresh",
        "title": "Refresh"
      },
      {
        "command": "ethFaucet.clearHistory",
        "title": "Clear History",
        "icon": "$(trash)"
      },
      {
        "command": "ethFaucet.quickSend",
        "title": "Quick Send 1 ETH",
        "icon": "$(send)"
      },
      {
        "command": "ethFaucet.editRpcUrl",
        "title": "Edit RPC Endpoint",
        "icon": "$(plug)"
      },
      {
        "command": "ethFaucet.debugHistory",
        "title": "Debug History Data"
      },
      {
        "command": "ethFaucet.addTestTransaction",
        "title": "Add Test Transaction"
      },
      {
        "command": "ethFaucet.debugGlobalState",
        "title": "Debug Global State"
      },
      {
        "command": "ethFaucet.resetGlobalState",
        "title": "Reset Global State"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ethFaucet",
          "title": "ETH Faucet",
          "icon": "$(send)"
        }
      ]
    },
    "views": {
      "ethFaucet": [
        {
          "id": "ethFaucet.connection",
          "name": "Connection",
          "when": "true",
          "icon": "$(debug-disconnect)"
        },
        {
          "id": "ethFaucet.accounts",
          "name": "Accounts",
          "when": "true",
          "icon": "$(accounts-view-bar-icon)"
        },
        {
          "id": "ethFaucet.faucet",
          "name": "Faucet",
          "when": "true",
          "icon": "$(send)"
        },
        {
          "id": "ethFaucet.history",
          "name": "Transaction History",
          "when": "true",
          "icon": "$(history)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ethFaucet.sendEth",
          "when": "view == ethFaucet.faucet",
          "group": "navigation"
        },
        {
          "command": "ethFaucet.clearHistory",
          "when": "view == ethFaucet.history",
          "group": "navigation"
        },
        {
          "command": "ethFaucet.editRpcUrl",
          "when": "view == ethFaucet.connection",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ethFaucet.quickSend",
          "when": "view == ethFaucet.accounts && viewItem == usedAddress",
          "group": "inline"
        }
      ]
    }
  },
  "configuration": {
    "title": "ETH Dev Faucet",
    "properties": {
      "ethFaucet.rpcUrl": {
        "type": "string",
        "default": "http://localhost:8545",
        "description": "RPC endpoint URL for the Ethereum node"
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "package": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ethers": "^6.15.0"
  }
}
